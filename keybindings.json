// Place your key bindings in this file to overwrite the defaults
[
    { "key": "f1",                    "command": "actions.find" },
    { "key": "cmd+d",                 "command": "editor.action.copyLinesDownAction",
                                         "when": "editorTextFocus && !editorReadonly" },
    { "key": "cmd+l",                 "command": "expandLineSelection"},
    { "key": "f3",                    "command": "editor.action.moveSelectionToNextFindMatch",
                                         "when": "editorFocus" },
    { "key": "f4",                    "command": "editor.action.addSelectionToNextFindMatch",
                                         "when": "editorFocus" },
    { "key": "cmd+y",                 "command": "redo" },
    { "key": "cmd+k cmd+d",           "command": "editor.action.formatDocument" },
    { "key": "cmd+k cmd+p",           "command": "workbench.action.showCommands" },
    { "key": "cmd+k cmd+u",           "command": "extension.changeCase.commands" },
    { "key": "cmd+j",                 "command": "editor.action.triggerSuggest",
                                         "when": "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly" },
    { "key": "cmd+k cmd+f",           "command": "rewrap.rewrapComment",
                                         "when": "editorTextFocus" },
    { "key": "cmd+k cmd+s",           "command": "sortLines.sortLines",
                                         "when": "editorTextFocus" }
]
